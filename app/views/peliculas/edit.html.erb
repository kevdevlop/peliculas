<div class="row">
  <div class="col-md-12 form">
    <h1>Editar Pelicula</h1>
   
      <%= form_for @pelicula,  :html => {:class => 'form-horizontal'} do |f|%>
      <div class="form-group">
        <%= f.label :title, "Titulo" , class: "col-sm-2 control-label label-form"%>
        <div class="col-sm-10">
          <%= f.text_field :title %>
        </div>

      </div>

      <div class="form-group">
        <%= f.label :year, "AÃ±o" , class: "col-sm-2 control-label label-form"%>
        <div class="col-sm-10">
          <%= f.text_field :year %>
        </div>

      </div>
      <div class="form-group">
        <%= f.label :rating, "Puntuacion", class: "col-sm-2 control-label label-form"%>
        <div class="col-sm-10">
            <%= f.number_field :rating %>
        </div>

      </div>
      <div class="form-group">
        <%= f.label :description, "Descripcion", class: "col-sm-2 control-label label-form" %>
        <div class="col-sm-10">
          <%= f.text_area :description %>
        </div>

      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit "Editar pelicula", class: "btn btn-success" %>
          <%= link_to 'Cancelar', peliculas_path, class: "btn btn-danger" %>
        </div>

      </div>
      <% end %>
    
  </div>
</div>
